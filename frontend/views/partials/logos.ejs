<%

function formatTeamDarkLogo(team) {
    if (!team) {
        return "";
    }
    return `
    img.team-logo-${team.id} \{
        content: url('https://a.espncdn.com/i/teamlogos/ncaa/500-dark/${team.id}.png')
    \}
    `
}
%>


<style>
    @media (prefers-color-scheme: dark) {
        <%- formatTeamDarkLogo(team) %>
        <%- formatTeamDarkLogo(homeTeam) %>
        <%- formatTeamDarkLogo(awayTeam) %>
    }
